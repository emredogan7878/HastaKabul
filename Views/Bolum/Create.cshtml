@model BolumViewModel

<div class="container my-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Bölüm Ekle</h2>
        </div>
        <div class="card-body">
            <form asp-controller="Bolum" asp-action="Create" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Baslik" class="form-label">Başlık</label>
                    <input asp-for="Baslik" class="form-control" />
                    <span asp-validation-for="Baslik" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success">Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">İptal</a>
            </form>
        </div>
    </div>
</div>
